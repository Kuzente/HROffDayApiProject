{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "NewMssql": "your-connection-string"
  },
  "reCAPTCHA": {
    "sitekey": "your-site-key",
    "secretkey": "your-secret-key",
    "siteUrl": "https://www.google.com/recaptcha/api/siteverify"
  },
  "SmtpOptions": {
    "Host": "your-host",
    "MailAddress": "your-mail",
    "Password": "your-password",
    "Port": "your-port"
  },
  "JwtOptions": {
    "Audience": "",
    "Issuer": "",
    "SecretKey": "",
    "ExpirePerHour": 10,
    "JwtCookieName": ""
  },
  "CryptoHashKey": "your-key", // should be 32 bit
  "DomainUrl": "your-domain-url",
  "RootPath": ""
}
