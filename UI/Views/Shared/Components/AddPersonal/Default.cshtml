@model AddPersonalDto
@{
    int pageNumber = System.Convert.ToInt32(Context.Request.Query["pageNumber"]);
    if (pageNumber == 0)
    {
        pageNumber = 1;
    }
}
<!--AddModal-->
<form method="post" asp-controller="Personal" asp-action="AddPersonal">
    <input type="hidden" name="pageNumber" value="@pageNumber">
    <div class="modal modal-blur fade" id="addModal" tabindex="-1"  aria-hidden="true" role="dialog">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel1">Personel Ekle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col mb-3">
                            <label class="form-label">Adı Soyadı *</label>
                            <div class="input-group input-group-merge">                               
                                <span class="input-group-text">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0"></path>
                                        <path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"></path>
                                    </svg>
                                </span>
                                <input type="text" asp-for="NameSurname" class="form-control" placeholder="Personal Ad-Soyadını Giriniz!">
                            </div>
                        </div>
                        <div class="col mb-3">
                            <label  class="form-label">Doğum Tarihi *</label>
                            <div class="input-group input-group-merge">                               
                                <span class="input-group-text">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-cake" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M3 20h18v-8a3 3 0 0 0 -3 -3h-12a3 3 0 0 0 -3 3v8z"></path>
                                        <path d="M3 14.803c.312 .135 .654 .204 1 .197a2.4 2.4 0 0 0 2 -1a2.4 2.4 0 0 1 2 -1a2.4 2.4 0 0 1 2 1a2.4 2.4 0 0 0 2 1a2.4 2.4 0 0 0 2 -1a2.4 2.4 0 0 1 2 -1a2.4 2.4 0 0 1 2 1a2.4 2.4 0 0 0 2 1c.35 .007 .692 -.062 1 -.197"></path>
                                        <path d="M12 4l1.465 1.638a2 2 0 1 1 -3.015 .099l1.55 -1.737z"></path>
                                    </svg>
                                </span>
                                <input type="date" asp-for="BirthDate" class="form-control" placeholder="Personal Doğum Tarihi!">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3">
                            <label  class="form-label">TC Kimlik No *</label>
                            <div class="input-group input-group-merge">                               
                                <span class="input-group-text">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-id" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M3 4m0 3a3 3 0 0 1 3 -3h12a3 3 0 0 1 3 3v10a3 3 0 0 1 -3 3h-12a3 3 0 0 1 -3 -3z"></path>
                                        <path d="M9 10m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path>
                                        <path d="M15 8l2 0"></path>
                                        <path d="M15 12l2 0"></path>
                                        <path d="M7 16l10 0"></path>
                                    </svg>
                                </span>
                                <input type="text" asp-for="IdentificationNumber" class="form-control" placeholder="Personal Tc Kimlik Giriniz!">
                            </div>
                        </div>
                        <div class="col mb-3">
                            <label  class="form-label">Sicil No *</label>
                            <div class="input-group input-group-merge">                               
                                <span class="input-group-text">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-id-badge-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M7 12h3v4h-3z"></path>
                                        <path d="M10 6h-6a1 1 0 0 0 -1 1v12a1 1 0 0 0 1 1h16a1 1 0 0 0 1 -1v-12a1 1 0 0 0 -1 -1h-6"></path>
                                        <path d="M10 3m0 1a1 1 0 0 1 1 -1h2a1 1 0 0 1 1 1v3a1 1 0 0 1 -1 1h-2a1 1 0 0 1 -1 -1z"></path>
                                        <path d="M14 16h2"></path>
                                        <path d="M14 12h4"></path>
                                    </svg>
                                </span>
                                <input type="text" asp-for="RegistirationNumber" class="form-control" placeholder="Personal Sicil No Giriniz!">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3">
                            <label  class="form-label">İşe Başlama Tarihi *</label>
                            <div class="input-group input-group-merge">                               
                                <span class="input-group-text">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-calendar" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z"></path>
                                        <path d="M16 3v4"></path>
                                        <path d="M8 3v4"></path>
                                        <path d="M4 11h16"></path>
                                        <path d="M11 15h1"></path>
                                        <path d="M12 15v3"></path>
                                    </svg>
                                </span>
                                <input type="date" asp-for="StartJobDate" class="form-control" placeholder="Personal İşe başlangıç Tarihi!">
                            </div>
                        </div>
                        <div class="col mb-3">
                            <label  class="form-label">Telefon No </label>
                            <div class="input-group input-group-merge">                               
                                <span id="basic-icon-default-phone2" class="input-group-text">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-phone" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2"></path>
                                    </svg>
                                </span>
                                <input type="tel" asp-for="Phonenumber" class="form-control" data-mask="000-000-00-00" data-mask-visible="true" placeholder="000-000-00-00" autocomplete="off">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3">
                            <label class="form-label">Ünvan / Görev *</label>
                            <select  type="text" class="form-select selectListTom" 
                                    asp-items="@(new SelectList(ViewBag.Positions,"ID","Name"))" asp-for="Position_Id"></select>
                        </div>
                        <div class="col mb-3">
                            <label class="form-label">Şube *</label>
                            <select  class="form-select selectListTom" asp-items="@(new SelectList(ViewBag.Branches,"ID","Name"))" asp-for="Branch_Id"></select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 form-check form-switch mb-3 border ">
                            <div class="d-flex justify-content-center">
                                <label class="form-label">Emeklilik Durumu *</label>
                            </div>
                            <div class="d-flex justify-content-around align-items-center">
                                <input class="form-check-input" asp-for="RetiredOrOld" type="checkbox" id="flexSwitchCheckDefault">
                                <label class="form-check-label" for="flexSwitchCheckDefault">Personel Emekli Mi ?</label>
                            </div>

                        </div>
                        <div class="col-6 mb-3">
                            <div class="d-flex justify-content-center">
                                <label class="form-label">Cinsiyet *</label>
                            </div>
                            
                            <div class="d-flex justify-content-evenly">
                                <label class="form-selectgroup-item">
                                    <input type="radio" name="gender" value="Erkek" asp-for="Gender" class="form-selectgroup-input" checked>
                                    <span class="form-selectgroup-label"><!-- Download SVG icon from http://tabler-icons.io/i/home -->
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-man" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <path d="M10 16v5"></path>
                                            <path d="M14 16v5"></path>
                                            <path d="M9 9h6l-1 7h-4z"></path>
                                            <path d="M5 11c1.333 -1.333 2.667 -2 4 -2"></path>
                                            <path d="M19 11c-1.333 -1.333 -2.667 -2 -4 -2"></path>
                                            <path d="M12 4m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path>
                                        </svg>
                                        Erkek</span>
                                </label>
                                <label class="form-selectgroup-item">
                                    <input type="radio" name="gender" value="Kadin" asp-for="Gender" class="form-selectgroup-input">
                                    <span class="form-selectgroup-label"><!-- Download SVG icon from http://tabler-icons.io/i/user -->
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-woman" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <path d="M10 16v5"></path>
                                            <path d="M14 16v5"></path>
                                            <path d="M8 16h8l-2 -7h-4z"></path>
                                            <path d="M5 11c1.667 -1.333 3.333 -2 5 -2"></path>
                                            <path d="M19 11c-1.667 -1.333 -3.333 -2 -5 -2"></path>
                                            <path d="M12 4m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path>
                                        </svg>
                                        Kadın</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        Kapat
                    </button>
                    <button type="submit" class="btn btn-primary">Personel Ekle</button>
                </div>
            </div>
        </div>
    </div>
</form>






