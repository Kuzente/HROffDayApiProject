@using Core.Enums
@model List<ReadPersonalDto>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Tüm Personeller</h2>
<div class="card">
    <div class="row">
        <div class="col-8">
            <h5 class="card-header">
                Tüm Personeller
            </h5></div>
        <div class="col-4 d-inline-flex justify-content-end ">
            <button class="btn btn-primary m-3">Personel Ekle</button>
        </div>
        </div>
    <table class="table">
        <thead>
        <tr>
            <th>Adı Soyadı</th>
            <th>TC Kimlik No</th>
            <th>Sicil No</th>
            <th>Şube</th>
            <th>Ünvan</th>
            <th>İşe Giriş Tarihi</th>
            <th>EYT</th>
            <th>Aktif Mi?</th>

        </tr>
        </thead>
        <tbody class="table-border-bottom-0">
        @foreach (var data in Model)
        {
            <tr>
                <td>@data.NameSurname</td>
                <td>@data.IdentificationNumber</td>
                <td>@data.RegistirationNumber</td>
                <td>@data.Branch.Name</td>
                <td>@data.Position.Name</td>
                <td>@data.StartJobDate.ToString("dd/MM/yyyy")</td>
                <td>
                    @{
                        if (data.RetiredOrOld)
                        {
                            <span class="badge bg-danger">Emekli</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Emekli Değil</span>
                        }
                    }
                </td>
                <td>
                    @{
                        if (data.Status == EntityStatusEnum.Online)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Pasif</span>
                        }
                    }
                </td>
            </tr>

        }
        </tbody>
    </table>
</div>
